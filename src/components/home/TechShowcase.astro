---
import TechCard from './TechCard.astro';
---

<div class="tech-showcase">
  <TechCard url="https://emberjs.com" src="/technologies/ember.svg" />
  <TechCard url="https://nestjs.com" src="/technologies/nest.svg" />
  <TechCard url="https://astro.build" src="/technologies/astro.png" />
  <TechCard url="https://nodejs.org" src="/technologies/node.svg" />
  <TechCard url="https://docker.com" src="/technologies/docker.png" />
  <TechCard url="https://kubernetes.io" src="/technologies/kubernetes.png" />
  <TechCard url="https://fluxcd.io" src="/technologies/flux.png" />
  <TechCard url="hhttps://linuxmint.com/" src="/technologies/linuxmint.png" />
</div>

<style>
  .tech-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, var(--tech-card-size));
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
  }
</style>
